# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration (Choose PostgreSQL or MySQL)
DB_TYPE=postgres
# For PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password
DB_NAME=college_erp

# For MySQL (uncomment if using MySQL)
# DB_HOST=localhost
# DB_PORT=3306
# DB_USER=root
# DB_PASSWORD=your_password
# DB_NAME=college_erp

# JWT Secret
JWT_SECRET=your_very_secure_secret_key_here_change_in_production
JWT_EXPIRE=7d

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Optional: Redis (for caching)
# REDIS_HOST=localhost
# REDIS_PORT=6379

# Optional: AI API (for study assistant)
# AI_API_KEY=your_ai_api_key
# AI_API_URL=https://api.openai.com/v1
